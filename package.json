{
  "name": "jadelec-site",
  "version": "1.0.0",
  "description": "Site vitrine Jadelec - Électricité générale",
  "main": ".eleventy.js",
  "scripts": {
    "css:build": "npx tailwindcss -i ./src/assets/css/styles.css -o ./_site/assets/css/styles.css --minify",
    "css:watch": "npx tailwindcss -i ./src/assets/css/styles.css -o ./_site/assets/css/styles.css --watch",
    "11ty:serve": "npx @11ty/eleventy --serve",
    "11ty:build": "npx @11ty/eleventy",
    "dev": "npm run css:build && npm-run-all --parallel css:watch 11ty:serve",
    "build": "npm run 11ty:build && npm run css:build",
    "preview": "npx @11ty/eleventy --serve --port=8081",
    "test:a11y": "node tests/accessibility.test.js",
    "test:a11y:ci": "npm run build && npx serve _site -l 8080 & sleep 3 && npm run test:a11y; kill %1"
  },
  "keywords": [
    "jadelec",
    "electricite",
    "gtb",
    "irve",
    "domotique"
  ],
  "author": "Val",
  "license": "UNLICENSED",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "autoprefixer": "^10.4.16",
    "npm-run-all": "^4.1.5",
    "pa11y": "^6.2.3",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "serve": "^14.2.1",
    "tailwindcss": "^3.4.0"
  }
}
