---
layout: layouts/base.njk
title: "{{ pages.realisations.page.seo.title }}"
description: "{{ pages.realisations.page.seo.description }}"
---

<section class="py-12 md:py-16">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <span class="badge badge-primary mb-4">{{ pages.realisations.intro.badge }}</span>
      <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
        {{ pages.realisations.intro.title }} <span class="gradient-text">{{ pages.realisations.intro.titleHighlight }}</span>
      </h1>
      <p class="text-xl text-gray-600 dark:text-dark-300 max-w-2xl mx-auto">
        {{ pages.realisations.intro.description }}
      </p>
    </div>
    
    {% if collections.realisations.length > 0 %}
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {% for realisation in collections.realisations | reverse %}
        {% include "components/realisation-card.njk" %}
      {% endfor %}
    </div>
    {% else %}
    <div class="text-center py-12 bg-gray-50 dark:bg-dark-800 rounded-xl">
      <svg class="w-16 h-16 text-gray-300 dark:text-dark-600 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
      </svg>
      <p class="text-gray-500 dark:text-dark-400">Les réalisations seront bientôt disponibles.</p>
    </div>
    {% endif %}
    
    <!-- CTA -->
    {% if pages.realisations.cta.enabled %}
    <div class="mt-16 bg-primary-50 dark:bg-primary-900/20 border border-primary-100 dark:border-primary-800/30 rounded-xl p-8 text-center">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">{{ pages.realisations.cta.title }}</h2>
      <p class="text-gray-600 dark:text-dark-300 mb-6">{{ pages.realisations.cta.description }}</p>
      <a href="{{ pages.realisations.cta.buttonUrl }}" class="inline-flex items-center px-6 py-3 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors">
        {{ pages.realisations.cta.buttonText }}
        <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </a>
    </div>
    {% endif %}
  </div>
</section>
