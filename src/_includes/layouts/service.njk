---
layout: layouts/base.njk
---
{% set svcConfig = servicesConfig.page %}

<article class="py-12 md:py-16">
  <div class="container mx-auto px-4 max-w-4xl">
    <!-- Breadcrumb -->
    <nav class="mb-8 text-sm" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-2">
        <li><a href="/" class="text-gray-500 dark:text-dark-400 hover:text-primary-600 dark:hover:text-primary-400">{{ svcConfig.breadcrumb.home }}</a></li>
        <li><span class="text-gray-400 dark:text-dark-600">/</span></li>
        <li><a href="/services/courant-fort/" class="text-gray-500 dark:text-dark-400 hover:text-primary-600 dark:hover:text-primary-400">{{ svcConfig.breadcrumb.services }}</a></li>
        <li><span class="text-gray-400 dark:text-dark-600">/</span></li>
        <li class="text-gray-900 dark:text-white font-medium">{{ title }}</li>
      </ol>
    </nav>
    
    <!-- Hero with optional image -->
    {% if heroImage %}
    <div class="relative rounded-2xl overflow-hidden mb-8">
      <img src="{{ heroImage }}" alt="{{ title }}" class="w-full h-64 object-cover">
      <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
      <div class="absolute bottom-0 left-0 p-6">
        <h1 class="text-3xl md:text-4xl font-bold text-white mb-2">{{ title }}</h1>
      </div>
    </div>
    {% else %}
    <h1 class="text-3xl md:text-4xl font-bold text-primary-600 dark:text-primary-400 mb-6">{{ title }}</h1>
    {% endif %}
    
    {% if description %}
    <p class="text-xl text-gray-600 dark:text-dark-300 mb-8">{{ description }}</p>
    {% endif %}
    
    <!-- Features list if available -->
    {% if features and features.length > 0 %}
    <div class="bg-gray-50 dark:bg-dark-800 rounded-xl p-6 mb-8">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Points cl√©s</h2>
      <ul class="grid md:grid-cols-2 gap-3">
        {% for feature in features %}
        <li class="flex items-center text-gray-700 dark:text-dark-300">
          <svg class="w-5 h-5 text-primary-500 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
          </svg>
          {{ feature }}
        </li>
        {% endfor %}
      </ul>
    </div>
    {% endif %}
    
    <div class="prose prose-lg dark:prose-invert max-w-none mb-12 prose-headings:text-gray-900 dark:prose-headings:text-white prose-p:text-gray-700 dark:prose-p:text-dark-300 prose-li:text-gray-700 dark:prose-li:text-dark-300 prose-strong:text-gray-900 dark:prose-strong:text-white">
      {{ content | safe }}
    </div>
    
    <!-- Clients if available -->
    {% if clients and clients.length > 0 %}
    <div class="mb-12">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Nos clients</h2>
      <div class="flex flex-wrap gap-2">
        {% for client in clients %}
        <span class="px-4 py-2 bg-primary-100 dark:bg-primary-900/30 text-primary-700 dark:text-primary-300 rounded-full text-sm font-medium">{{ client }}</span>
        {% endfor %}
      </div>
    </div>
    {% endif %}
    
    <!-- CTA Section -->
    {% if svcConfig.cta.enabled %}
    <div class="bg-primary-50 dark:bg-primary-900/20 border border-primary-100 dark:border-primary-800/30 rounded-xl p-8 text-center">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">{{ svcConfig.cta.title }}</h2>
      <p class="text-gray-600 dark:text-dark-300 mb-6">{{ svcConfig.cta.description }}</p>
      <a href="{{ svcConfig.cta.buttonUrl }}" class="inline-flex items-center px-6 py-3 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors">
        {{ svcConfig.cta.buttonText }}
        <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </a>
    </div>
    {% endif %}
    
    <!-- Other Services -->
    {% if svcConfig.otherServices.enabled %}
    <div class="mt-16">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">{{ svcConfig.otherServices.title }}</h2>
      <div class="grid md:grid-cols-2 gap-4">
        {% for service in collections.services %}
          {% if service.url !== page.url %}
          <a href="{{ service.url }}" class="block p-4 border border-gray-200 dark:border-dark-700 rounded-lg hover:border-primary-500 dark:hover:border-primary-500 hover:shadow-md dark:bg-dark-800/50 transition-all">
            <h3 class="font-semibold text-gray-900 dark:text-white">{{ service.data.title }}</h3>
            {% if service.data.shortDescription %}
            <p class="text-sm text-gray-600 dark:text-dark-400 mt-1">{{ service.data.shortDescription }}</p>
            {% endif %}
          </a>
          {% endif %}
        {% endfor %}
      </div>
    </div>
    {% endif %}
  </div>
</article>
