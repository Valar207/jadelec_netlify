---
layout: layouts/base.njk
---

<article class="py-12 md:py-16">
  <div class="container mx-auto px-4">
    
    <!-- Breadcrumb -->
    <nav class="mb-8" aria-label="Fil d'Ariane">
      <ol class="flex items-center space-x-2 text-sm text-gray-500">
        <li><a href="/" class="hover:text-blue-600">Accueil</a></li>
        <li><span class="mx-2">/</span></li>
        <li><a href="/realisations/" class="hover:text-blue-600">Réalisations</a></li>
        <li><span class="mx-2">/</span></li>
        <li class="text-gray-900 font-medium">{{ title }}</li>
      </ol>
    </nav>

    <!-- Header -->
    <header class="mb-8">
      <span class="inline-block px-3 py-1 bg-blue-100 text-blue-800 text-sm font-medium rounded-full mb-4">
        {{ category }}
      </span>
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">{{ title }}</h1>
      <p class="text-xl text-gray-600 max-w-3xl">{{ description }}</p>
    </header>

    <!-- Gallery -->
    {% set imgCount = images | length if images else 0 %}
    {% if images and imgCount > 0 %}
    <div class="mb-12">
      {% if imgCount == 1 %}
      <!-- Single image - full width -->
      <div class="rounded-xl overflow-hidden shadow-lg">
        <img src="{{ images[0] }}" alt="{{ title }}" class="w-full h-auto object-cover max-h-[500px]">
      </div>
      
      {% elif imgCount == 2 %}
      <!-- Two images - side by side -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {% for img in images %}
        <div class="rounded-xl overflow-hidden shadow-lg aspect-[4/3]">
          <img src="{{ img }}" alt="{{ title }} - Photo {{ loop.index }}" class="w-full h-full object-cover">
        </div>
        {% endfor %}
      </div>
      
      {% elif imgCount == 3 %}
      <!-- Three images - one large + two small -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="md:row-span-2 rounded-xl overflow-hidden shadow-lg">
          <img src="{{ images[0] }}" alt="{{ title }} - Photo 1" class="w-full h-full object-cover min-h-[300px] md:min-h-full">
        </div>
        <div class="rounded-xl overflow-hidden shadow-lg aspect-[4/3]">
          <img src="{{ images[1] }}" alt="{{ title }} - Photo 2" class="w-full h-full object-cover">
        </div>
        <div class="rounded-xl overflow-hidden shadow-lg aspect-[4/3]">
          <img src="{{ images[2] }}" alt="{{ title }} - Photo 3" class="w-full h-full object-cover">
        </div>
      </div>
      
      {% elif imgCount >= 4 %}
      <!-- Four images - grid 2x2 -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {% for img in images %}
        {% if loop.index <= 4 %}
        <div class="rounded-xl overflow-hidden shadow-lg aspect-[4/3]">
          <img src="{{ img }}" alt="{{ title }} - Photo {{ loop.index }}" class="w-full h-full object-cover">
        </div>
        {% endif %}
        {% endfor %}
      </div>
      {% endif %}
    </div>
    {% elif image %}
    <!-- Fallback for single image field -->
    <div class="mb-12 rounded-xl overflow-hidden shadow-lg">
      <img src="{{ image }}" alt="{{ title }}" class="w-full h-auto object-cover max-h-[500px]">
    </div>
    {% endif %}

    <!-- Content -->
    <div class="max-w-3xl">
      <div class="prose prose-lg">
        {{ content | safe }}
      </div>
    </div>

    <!-- Project Info -->
    {% if client or location or year %}
    <div class="mt-12 p-6 bg-gray-50 rounded-xl">
      <h2 class="text-lg font-bold text-gray-900 mb-4">Informations projet</h2>
      <dl class="grid grid-cols-1 sm:grid-cols-3 gap-4">
        {% if client %}
        <div>
          <dt class="text-sm text-gray-500">Client</dt>
          <dd class="text-gray-900 font-medium">{{ client }}</dd>
        </div>
        {% endif %}
        {% if location %}
        <div>
          <dt class="text-sm text-gray-500">Lieu</dt>
          <dd class="text-gray-900 font-medium">{{ location }}</dd>
        </div>
        {% endif %}
        {% if year %}
        <div>
          <dt class="text-sm text-gray-500">Année</dt>
          <dd class="text-gray-900 font-medium">{{ year }}</dd>
        </div>
        {% endif %}
      </dl>
    </div>
    {% endif %}

    <!-- CTA -->
    <div class="mt-12 p-8 bg-blue-600 rounded-xl text-center">
      <h2 class="text-2xl font-bold text-white mb-4">Un projet similaire ?</h2>
      <p class="text-blue-100 mb-6">Contactez-nous pour discuter de votre projet et obtenir un devis gratuit.</p>
      <a href="/contact/" class="inline-flex items-center px-6 py-3 bg-white text-blue-600 font-bold rounded-lg hover:bg-blue-50 transition-colors">
        Demander un devis
      </a>
    </div>

    <!-- Back link -->
    <div class="mt-8">
      <a href="/realisations/" class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Retour aux réalisations
      </a>
    </div>
  </div>
</article>
