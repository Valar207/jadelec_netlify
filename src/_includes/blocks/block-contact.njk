{# Block Contact #}
<section class="py-16 md:py-20 bg-gray-50 dark:bg-dark-900">
  <div class="container mx-auto px-4">
    {% if block.title %}
    <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white text-center mb-4">
      {{ block.title }}
    </h2>
    {% endif %}
    
    {% if block.description %}
    <p class="text-lg text-gray-600 dark:text-dark-300 text-center mb-12 max-w-2xl mx-auto">
      {{ block.description }}
    </p>
    {% endif %}
    
    <div class="grid lg:grid-cols-2 gap-12">
      {% if block.showInfo %}
      <div>
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-6">Nos coordonnées</h3>
        
        <div class="space-y-4">
          <div class="flex items-start gap-4">
            <div class="w-10 h-10 bg-primary-100 dark:bg-primary-900/30 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <div>
              <div class="font-medium text-gray-900 dark:text-white">Adresse</div>
              <div class="text-gray-600 dark:text-dark-400">{{ site.address.street }}, {{ site.address.postalCode }} {{ site.address.city }}</div>
            </div>
          </div>
          
          <div class="flex items-start gap-4">
            <div class="w-10 h-10 bg-primary-100 dark:bg-primary-900/30 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
            </div>
            <div>
              <div class="font-medium text-gray-900 dark:text-white">Téléphone</div>
              <a href="tel:{{ site.phone | replace(' ', '') }}" class="text-primary-600 dark:text-primary-400 hover:underline">{{ site.phone }}</a>
            </div>
          </div>
          
          <div class="flex items-start gap-4">
            <div class="w-10 h-10 bg-primary-100 dark:bg-primary-900/30 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <div>
              <div class="font-medium text-gray-900 dark:text-white">Email</div>
              <a href="mailto:{{ site.email }}" class="text-primary-600 dark:text-primary-400 hover:underline">{{ site.email }}</a>
            </div>
          </div>
        </div>
      </div>
      {% endif %}
      
      {% if block.showForm %}
      <div class="bg-white dark:bg-dark-800 rounded-2xl p-8 shadow-lg">
        {% include "components/contact-form.njk" %}
      </div>
      {% endif %}
    </div>
  </div>
</section>
