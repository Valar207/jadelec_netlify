{# Block Testimonials #}
<section class="py-16 md:py-20 bg-gray-50 dark:bg-dark-900">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      {% if block.badge %}
      <span class="badge badge-primary mb-4">{{ block.badge }}</span>
      {% endif %}
      
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white">
        {{ block.title }}
      </h2>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {% for item in block.items %}
      <div class="card p-6">
        <div class="flex items-center gap-1 mb-4">
          {% for i in range(0, item.rating) %}
          <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
          </svg>
          {% endfor %}
        </div>
        
        <p class="text-gray-700 dark:text-dark-300 mb-4 italic">
          "{{ item.text }}"
        </p>
        
        <div class="flex items-center gap-3">
          {% if item.photo %}
          <img src="{{ item.photo }}" alt="{{ item.name }}" class="w-10 h-10 rounded-full object-cover">
          {% else %}
          <div class="w-10 h-10 rounded-full bg-primary-100 dark:bg-primary-900/30 flex items-center justify-center">
            <span class="text-primary-600 dark:text-primary-400 font-semibold">{{ item.name | first | upper }}</span>
          </div>
          {% endif %}
          <div>
            <div class="font-semibold text-gray-900 dark:text-white">{{ item.name }}</div>
            {% if item.company %}
            <div class="text-sm text-gray-500 dark:text-dark-400">{{ item.company }}</div>
            {% endif %}
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
