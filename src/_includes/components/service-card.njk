<a href="{{ url }}" class="group block bg-white rounded-xl shadow-sm hover:shadow-lg transition-all duration-300 overflow-hidden border border-gray-100">
  <div class="p-6">
    {% if icon %}
    <div class="w-14 h-14 bg-blue-100 rounded-lg flex items-center justify-center mb-4 group-hover:bg-blue-600 transition-colors">
      <svg class="w-7 h-7 text-blue-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        {{ icon | safe }}
      </svg>
    </div>
    {% endif %}
    
    <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors">
      {{ title }}
    </h3>
    
    {% if description %}
    <p class="text-gray-600 mb-4">{{ description }}</p>
    {% endif %}
    
    <span class="inline-flex items-center text-blue-600 font-medium">
      En savoir plus
      <svg class="ml-2 w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
      </svg>
    </span>
  </div>
</a>
