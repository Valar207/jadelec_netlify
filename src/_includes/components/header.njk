<header class="bg-white/95 dark:bg-dark-950/95 backdrop-blur-lg border-b border-gray-200 dark:border-dark-800 sticky top-0 z-50 transition-colors duration-300">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center">
        <img src="{{ navigation.header.logo | default('/assets/images/JADELEC Logo.png.webp') }}" alt="{{ navigation.header.logoAlt | default('Jadelec') }}" class="h-10 md:h-12 w-auto">
      </a>
      
      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center space-x-8" aria-label="Navigation principale">
        {% for item in navigation.main %}
          {% if item.children %}
          <div class="relative group">
            <button class="flex items-center text-gray-700 dark:text-dark-300 hover:text-primary-500 font-medium transition-colors link-underline py-2">
              {{ item.label }}
              <svg class="ml-1 w-4 h-4 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
              </svg>
            </button>
            <div class="absolute left-0 mt-2 w-56 bg-white dark:bg-dark-900 border border-gray-200 dark:border-dark-700 rounded-xl shadow-xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 transform group-hover:translate-y-0 translate-y-2">
              <div class="py-2">
                {% for child in item.children %}
                <a href="{{ child.url }}" class="block px-4 py-2.5 hover:bg-gray-50 dark:hover:bg-dark-800 hover:text-primary-500 transition-colors {% if page.url == child.url %}text-primary-500 font-bold{% else %}text-gray-600 dark:text-dark-300{% endif %}">
                  {{ child.label }}
                </a>
                {% endfor %}
              </div>
            </div>
          </div>
          {% else %}
          <a href="{{ item.url }}" class="font-medium transition-colors py-2 {% if page.url == item.url %}text-primary-500 border-b-2 border-primary-500{% else %}text-gray-700 dark:text-dark-300 hover:text-primary-500 link-underline{% endif %}">
            {{ item.label }}
          </a>
          {% endif %}
        {% endfor %}
      </nav>
      
      <!-- CTA + Phone + Dark Mode Toggle -->
      <div class="hidden md:flex items-center space-x-4">
        {% if navigation.header.showPhone %}
        <a href="tel:{{ site.phone | replace(' ', '') }}" class="flex items-center text-gray-600 dark:text-dark-300 hover:text-primary-500 transition-colors">
          <svg class="w-5 h-5 mr-2 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          <span class="font-medium">{{ site.phone }}</span>
        </a>
        {% endif %}
        
        <!-- Dark Mode Toggle -->
        <button id="theme-toggle" class="p-2 rounded-lg bg-gray-100 dark:bg-dark-800 text-gray-600 dark:text-dark-300 hover:bg-gray-200 dark:hover:bg-dark-700 transition-colors" aria-label="Toggle dark mode">
          <svg id="theme-icon-light" class="w-5 h-5 hidden dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/>
          </svg>
          <svg id="theme-icon-dark" class="w-5 h-5 block dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"/>
          </svg>
        </button>
        
        <a href="/contact/" class="btn btn-primary px-5 py-2.5">
          Devis gratuit
        </a>
      </div>
      
      <!-- Mobile Menu Button -->
      <button id="mobile-menu-btn" class="lg:hidden p-2 text-dark-300 hover:text-primary-500 transition-colors" aria-label="Menu">
        <svg id="menu-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
        <svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>
    
    <!-- Mobile Menu -->
    <nav id="mobile-menu" class="lg:hidden hidden pb-4" aria-label="Navigation mobile">
      <div class="space-y-2">
        {% for item in navigation.main %}
          {% if item.children %}
            <div class="border-b border-gray-200 dark:border-dark-800 pb-2">
              <span class="block px-3 py-2 text-gray-900 dark:text-white font-medium">{{ item.label }}</span>
              {% for child in item.children %}
              <a href="{{ child.url }}" class="block px-6 py-2 hover:text-primary-500 transition-colors {% if page.url == child.url %}text-primary-500 font-bold{% else %}text-gray-600 dark:text-dark-400{% endif %}">
                {{ child.label }}
              </a>
              {% endfor %}
            </div>
          {% else %}
          <a href="{{ item.url }}" class="block px-3 py-2 text-gray-700 dark:text-dark-300 hover:text-primary-500 font-medium transition-colors">
            {{ item.label }}
          </a>
          {% endif %}
        {% endfor %}
        <div class="pt-4 px-3 space-y-3">
          {% if navigation.header.showPhone %}
          <a href="tel:{{ site.phone | replace(' ', '') }}" class="flex items-center justify-center py-2 text-primary-500 font-medium">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            {{ site.phone }}
          </a>
          {% endif %}
          
          <!-- Dark Mode Toggle Mobile -->
          <button id="theme-toggle-mobile" class="flex items-center justify-center w-full py-2 px-4 rounded-lg bg-gray-100 dark:bg-dark-800 text-gray-700 dark:text-dark-300 hover:bg-gray-200 dark:hover:bg-dark-700 transition-colors">
            <svg class="w-5 h-5 mr-2 hidden dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/>
            </svg>
            <svg class="w-5 h-5 mr-2 block dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"/>
            </svg>
            <span class="dark:hidden">Mode sombre</span>
            <span class="hidden dark:inline">Mode clair</span>
          </button>
          
          <a href="/contact/" class="btn btn-primary w-full justify-center">
            Demander un devis
          </a>
        </div>
      </div>
    </nav>
  </div>
</header>
