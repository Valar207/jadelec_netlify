<header class="bg-white shadow-sm sticky top-0 z-50">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center">
        <img src="/assets/images/JADELEC Logo.png.webp" alt="Jadelec - Électricité Générale" class="h-10 md:h-12 w-auto">
      </a>
      
      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center space-x-8" aria-label="Navigation principale">
        {% for item in navigation.main %}
          {% if item.children %}
          <div class="relative group">
            <button class="flex items-center text-gray-700 hover:text-blue-600 font-medium">
              {{ item.label }}
              <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
              </svg>
            </button>
            <div class="absolute left-0 mt-2 w-56 bg-white rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
              <div class="py-2">
                {% for child in item.children %}
                <a href="{{ child.url }}" class="block px-4 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600">
                  {{ child.label }}
                </a>
                {% endfor %}
              </div>
            </div>
          </div>
          {% else %}
          <a href="{{ item.url }}" class="text-gray-700 hover:text-blue-600 font-medium">
            {{ item.label }}
          </a>
          {% endif %}
        {% endfor %}
      </nav>
      
      <!-- CTA + Phone -->
      <div class="hidden md:flex items-center space-x-4">
        <a href="tel:{{ site.phone | replace(' ', '') }}" class="flex items-center text-gray-700 hover:text-blue-600">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          <span class="font-medium">{{ site.phone }}</span>
        </a>
        <a href="/contact/" class="px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors">
          Devis gratuit
        </a>
      </div>
      
      <!-- Mobile Menu Button -->
      <button id="mobile-menu-btn" class="lg:hidden p-2 text-gray-700" aria-label="Menu">
        <svg id="menu-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
        <svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>
    
    <!-- Mobile Menu -->
    <nav id="mobile-menu" class="lg:hidden hidden pb-4" aria-label="Navigation mobile">
      <div class="space-y-2">
        {% for item in navigation.main %}
          {% if item.children %}
            <div class="border-b border-gray-100 pb-2">
              <span class="block px-3 py-2 text-gray-900 font-medium">{{ item.label }}</span>
              {% for child in item.children %}
              <a href="{{ child.url }}" class="block px-6 py-2 text-gray-600 hover:text-blue-600">
                {{ child.label }}
              </a>
              {% endfor %}
            </div>
          {% else %}
          <a href="{{ item.url }}" class="block px-3 py-2 text-gray-700 hover:text-blue-600 font-medium">
            {{ item.label }}
          </a>
          {% endif %}
        {% endfor %}
        <div class="pt-4 px-3 space-y-3">
          <a href="tel:{{ site.phone | replace(' ', '') }}" class="flex items-center justify-center py-2 text-blue-600 font-medium">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            {{ site.phone }}
          </a>
          <a href="/contact/" class="block w-full py-3 bg-blue-600 text-white text-center font-semibold rounded-lg hover:bg-blue-700">
            Demander un devis
          </a>
        </div>
      </div>
    </nav>
  </div>
</header>
