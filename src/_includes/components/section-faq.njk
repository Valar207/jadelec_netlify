{% if sections.faq.enabled %}
<section class="py-20 md:py-32 bg-gray-50 dark:bg-dark-950 transition-colors">
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto">
      <div class="text-center mb-12">
        <span class="badge badge-primary mb-4">FAQ</span>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white">
          {{ sections.faq.title }}
        </h2>
      </div>
      
      <div class="space-y-4">
        {% for item in sections.faq.items %}
        <details class="group bg-white dark:bg-dark-800 rounded-xl border border-gray-200 dark:border-dark-700 overflow-hidden">
          <summary class="flex items-center justify-between p-6 cursor-pointer list-none">
            <h3 class="font-semibold text-gray-900 dark:text-white pr-4">{{ item.question }}</h3>
            <svg class="w-5 h-5 text-gray-500 dark:text-dark-400 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </summary>
          <div class="px-6 pb-6">
            <p class="text-gray-600 dark:text-dark-300">{{ item.answer }}</p>
          </div>
        </details>
        {% endfor %}
      </div>
    </div>
  </div>
</section>
{% endif %}
