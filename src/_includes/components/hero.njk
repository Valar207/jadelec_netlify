{% set hero = pages.home.hero %}
<section class="relative bg-gradient-to-br from-primary-600 via-primary-500 to-primary-700 dark:from-dark-950 dark:via-dark-900 dark:to-dark-950 text-white overflow-hidden min-h-[85vh] flex items-center">
  <!-- Animated Background -->
  <div class="absolute inset-0">
    <!-- Gradient orbs -->
    <div class="absolute top-1/4 -left-20 w-96 h-96 bg-white/10 dark:bg-primary-500/20 rounded-full blur-3xl animate-pulse-slow"></div>
    <div class="absolute bottom-1/4 -right-20 w-80 h-80 bg-accent-500/20 dark:bg-accent-500/15 rounded-full blur-3xl animate-pulse-slow" style="animation-delay: 2s;"></div>
    <!-- Grid pattern -->
    <div class="absolute inset-0 opacity-[0.05] dark:opacity-[0.03]" style="background-image: url('data:image/svg+xml,%3Csvg width=&quot;60&quot; height=&quot;60&quot; viewBox=&quot;0 0 60 60&quot; xmlns=&quot;http://www.w3.org/2000/svg&quot;%3E%3Cg fill=&quot;none&quot; fill-rule=&quot;evenodd&quot;%3E%3Cg fill=&quot;%23ffffff&quot; fill-opacity=&quot;1&quot;%3E%3Cpath d=&quot;M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z&quot;/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
  </div>
  
  <div class="container mx-auto px-4 py-20 md:py-28 lg:py-32 relative z-10">
    <div class="max-w-4xl animate-fade-in-up">
      <!-- Badge -->
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/20 dark:bg-primary-500/10 border border-white/30 dark:border-primary-500/20 text-white dark:text-primary-400 text-sm font-medium mb-8 animate-fade-in" style="animation-delay: 0.2s;">
        <span class="w-2 h-2 bg-white dark:bg-primary-500 rounded-full animate-pulse"></span>
        {{ hero.badge }}
      </div>
      
      <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold mb-6 leading-[1.1] tracking-tight">
        <span class="text-white">{{ hero.title }}</span>
        <span class="block mt-2 text-white/90 dark:text-primary-400">{{ hero.subtitle }}</span>
      </h1>
      
      <p class="text-lg md:text-xl text-white/80 dark:text-dark-300 mb-10 leading-relaxed max-w-2xl">
        {{ hero.description }}
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 mb-16">
        <a href="{{ hero.ctaPrimary.url }}" class="inline-flex items-center justify-center bg-white text-primary-600 hover:bg-gray-100 font-semibold rounded-xl text-lg px-8 py-4 transition-all duration-300 shadow-lg hover:shadow-xl group">
          {{ hero.ctaPrimary.text }}
          <svg class="ml-2 w-5 h-5 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
        <a href="tel:{{ site.phone | replace(' ', '') }}" class="inline-flex items-center justify-center bg-white/20 backdrop-blur-sm border border-white/30 text-white hover:bg-white/30 font-semibold rounded-xl text-lg px-8 py-4 transition-all duration-300 group">
          <svg class="mr-2 w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          {% if hero.ctaSecondary.showPhone %}{{ site.phone }}{% else %}{{ hero.ctaSecondary.text }}{% endif %}
        </a>
      </div>
      
      <!-- Trust Badges -->
      <div class="flex flex-wrap items-center gap-8">
        {% for badge in hero.trustBadges %}
        <div class="flex items-center gap-3 group">
          <div class="w-12 h-12 rounded-xl bg-white/20 backdrop-blur-sm border border-white/30 flex items-center justify-center group-hover:bg-white/30 transition-all">
            {% if badge.icon == "shield" %}
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
            {% elif badge.icon == "location" %}
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            {% elif badge.icon == "bolt" %}
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
            {% elif badge.icon == "users" %}
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
            {% elif badge.icon == "check" %}
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            {% elif badge.icon == "star" %}
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
            </svg>
            {% endif %}
          </div>
          <div>
            <div class="font-semibold text-white">{{ badge.title }}</div>
            <div class="text-sm text-white/70">{{ badge.subtitle }}</div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
  
  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <svg class="w-6 h-6 text-dark-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
    </svg>
  </div>
</section>
