<a href="{{ realisation.url }}" class="group block bg-white rounded-xl shadow-sm hover:shadow-lg transition-all duration-300 overflow-hidden">
  {% if realisation.data.images and realisation.data.images.length > 0 %}
  <div class="aspect-[4/3] overflow-hidden">
    <img src="{{ realisation.data.images[0] }}" alt="{{ realisation.data.title }}" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
  </div>
  {% elif realisation.data.image %}
  <div class="aspect-[4/3] overflow-hidden">
    <img src="{{ realisation.data.image }}" alt="{{ realisation.data.title }}" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300">
  </div>
  {% else %}
  <div class="aspect-[4/3] bg-gray-200 flex items-center justify-center">
    <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
    </svg>
  </div>
  {% endif %}
  
  <div class="p-5">
    {% if realisation.data.category %}
    <span class="inline-block px-2 py-1 bg-blue-100 text-blue-800 text-xs font-medium rounded mb-2">
      {{ realisation.data.category }}
    </span>
    {% endif %}
    
    <h3 class="text-lg font-bold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors">
      {{ realisation.data.title }}
    </h3>
    
    {% if realisation.data.description %}
    <p class="text-gray-600 text-sm line-clamp-2">{{ realisation.data.description }}</p>
    {% endif %}
    
    <span class="inline-flex items-center text-blue-600 font-medium text-sm mt-3">
      Voir le projet
      <svg class="ml-1 w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
      </svg>
    </span>
  </div>
</a>
