<footer class="bg-gray-100 dark:bg-dark-950 border-t border-gray-200 dark:border-dark-800 transition-colors">
  <!-- Main Footer -->
  <div class="container mx-auto px-4 py-16">
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-12">
      <!-- Company Info -->
      <div class="lg:col-span-1">
        <img src="/assets/images/JADELEC Logo.png.webp" alt="Jadelec" class="h-12 mb-6">
        <p class="text-gray-600 dark:text-dark-400 mb-6 leading-relaxed">{{ site.tagline }}</p>
        <p class="text-gray-500 dark:text-dark-400 text-sm">
          {{ site.address.street }}<br>
          {{ site.address.postalCode }} {{ site.address.city }}
        </p>
      </div>
      
      <!-- Contact -->
      <div>
        <h3 class="text-gray-900 dark:text-white font-semibold mb-6 flex items-center">
          <span class="w-8 h-0.5 bg-primary-500 mr-3"></span>
          Contact
        </h3>
        <ul class="space-y-4">
          <li>
            <a href="tel:{{ site.phone | replace(' ', '') }}" class="flex items-center text-gray-600 dark:text-dark-400 hover:text-primary-500 transition-colors group">
              <div class="w-10 h-10 rounded-lg bg-gray-200 dark:bg-dark-800 border border-gray-300 dark:border-dark-700 flex items-center justify-center mr-3 group-hover:border-primary-500/50 transition-colors">
                <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
              </div>
              {{ site.phone }}
            </a>
          </li>
          <li>
            <a href="tel:{{ site.mobile | replace(' ', '') }}" class="flex items-center text-gray-600 dark:text-dark-400 hover:text-primary-500 transition-colors group">
              <div class="w-10 h-10 rounded-lg bg-gray-200 dark:bg-dark-800 border border-gray-300 dark:border-dark-700 flex items-center justify-center mr-3 group-hover:border-primary-500/50 transition-colors">
                <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                </svg>
              </div>
              {{ site.mobile }}
            </a>
          </li>
          <li>
            <a href="mailto:{{ site.email }}" class="flex items-center text-gray-600 dark:text-dark-400 hover:text-primary-500 transition-colors group">
              <div class="w-10 h-10 rounded-lg bg-gray-200 dark:bg-dark-800 border border-gray-300 dark:border-dark-700 flex items-center justify-center mr-3 group-hover:border-primary-500/50 transition-colors">
                <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              {{ site.email }}
            </a>
          </li>
        </ul>
      </div>
      
      <!-- Hours -->
      <div>
        <h3 class="text-gray-900 dark:text-white font-semibold mb-6 flex items-center">
          <span class="w-8 h-0.5 bg-primary-500 mr-3"></span>
          Horaires
        </h3>
        <div class="space-y-3">
          <p class="text-gray-600 dark:text-dark-400">{{ site.hours }}</p>
          <div class="flex items-center text-primary-500 text-sm">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
            Intervention d'urgence 24h/24
          </div>
        </div>
      </div>
      
      <!-- Services -->
      <div>
        <h3 class="text-gray-900 dark:text-white font-semibold mb-6 flex items-center">
          <span class="w-8 h-0.5 bg-primary-500 mr-3"></span>
          Nos services
        </h3>
        <ul class="space-y-3">
          {% for item in navigation.main %}
            {% if item.children %}
              {% for child in item.children %}
              <li>
                <a href="{{ child.url }}" class="text-gray-600 dark:text-dark-400 hover:text-primary-500 transition-colors flex items-center group">
                  <svg class="w-4 h-4 mr-2 text-gray-400 dark:text-dark-600 group-hover:text-primary-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                  </svg>
                  {{ child.label }}
                </a>
              </li>
              {% endfor %}
            {% endif %}
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
  
  <!-- Bottom Bar -->
  <div class="border-t border-gray-200 dark:border-dark-800">
    <div class="container mx-auto px-4 py-6">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-gray-500 dark:text-dark-400 text-sm">
          © 2024 {{ site.name }}. Tous droits réservés.
        </p>
        <div class="flex items-center space-x-6">
          {% for item in navigation.footer %}
          <a href="{{ item.url }}" class="text-gray-500 dark:text-dark-400 hover:text-primary-500 text-sm transition-colors">
            {{ item.label }}
          </a>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</footer>
