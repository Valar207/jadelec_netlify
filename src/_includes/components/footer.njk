<footer class="bg-gray-900 text-white">
  <div class="container mx-auto px-4 py-12">
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div>
        <h3 class="text-xl font-bold mb-4">{{ site.name }}</h3>
        <p class="text-gray-400 mb-4">{{ site.tagline }}</p>
        <p class="text-gray-400 text-sm">
          {{ site.address.street }}<br>
          {{ site.address.postalCode }} {{ site.address.city }}
        </p>
      </div>
      
      <!-- Contact -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Contact</h3>
        <ul class="space-y-3">
          <li>
            <a href="tel:{{ site.phone | replace(' ', '') }}" class="flex items-center text-gray-400 hover:text-white transition-colors">
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
              {{ site.phone }}
            </a>
          </li>
          <li>
            <a href="tel:{{ site.mobile | replace(' ', '') }}" class="flex items-center text-gray-400 hover:text-white transition-colors">
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>
              </svg>
              {{ site.mobile }}
            </a>
          </li>
          <li>
            <a href="mailto:{{ site.email }}" class="flex items-center text-gray-400 hover:text-white transition-colors">
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              {{ site.email }}
            </a>
          </li>
        </ul>
      </div>
      
      <!-- Hours -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Horaires</h3>
        <p class="text-gray-400">{{ site.hours }}</p>
        <p class="text-gray-500 text-sm mt-2">Intervention d'urgence possible</p>
      </div>
      
      <!-- Services -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Nos services</h3>
        <ul class="space-y-2">
          {% for item in navigation.main %}
            {% if item.children %}
              {% for child in item.children %}
              <li>
                <a href="{{ child.url }}" class="text-gray-400 hover:text-white transition-colors">
                  {{ child.label }}
                </a>
              </li>
              {% endfor %}
            {% endif %}
          {% endfor %}
        </ul>
      </div>
    </div>
    
    <!-- Bottom -->
    <div class="border-t border-gray-800 mt-8 pt-8 flex flex-col md:flex-row justify-between items-center">
      <p class="text-gray-500 text-sm">
        © 2024 {{ site.name }}. Tous droits réservés.
      </p>
      <div class="flex space-x-4 mt-4 md:mt-0">
        {% for item in navigation.footer %}
        <a href="{{ item.url }}" class="text-gray-500 hover:text-white text-sm transition-colors">
          {{ item.label }}
        </a>
        {% endfor %}
      </div>
    </div>
  </div>
</footer>
