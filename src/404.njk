---
layout: layouts/base.njk
title: "{{ pages['404'].page.title }}"
description: "{{ pages['404'].page.description }}"
permalink: /404.html
---

<section class="py-16 md:py-24">
  <div class="container mx-auto px-4">
    <div class="max-w-2xl mx-auto text-center">
      <div class="text-8xl font-bold text-primary-600 dark:text-primary-400 mb-4">{{ pages['404'].page.code }}</div>
      
      <h1 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">{{ pages['404'].page.heading }}</h1>
      
      <p class="text-xl text-gray-600 dark:text-dark-300 mb-8">
        {{ pages['404'].page.description }}
      </p>
      
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="{{ pages['404'].page.buttons.home.url }}" class="inline-flex items-center justify-center px-6 py-3 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors">
          {{ pages['404'].page.buttons.home.text }}
        </a>
        {% if pages['404'].page.buttons.contact.enabled %}
        <a href="{{ pages['404'].page.buttons.contact.url }}" class="inline-flex items-center justify-center px-6 py-3 border border-gray-300 dark:border-dark-600 text-gray-700 dark:text-dark-300 font-semibold rounded-lg hover:bg-gray-50 dark:hover:bg-dark-800 transition-colors">
          {{ pages['404'].page.buttons.contact.text }}
        </a>
        {% endif %}
      </div>
      
      {% if pages['404'].page.suggestions.enabled %}
      <div class="mt-12 pt-8 border-t border-gray-200 dark:border-dark-700">
        <p class="text-gray-500 dark:text-dark-400 mb-4">{{ pages['404'].page.suggestions.title }}</p>
        <div class="flex flex-wrap justify-center gap-4">
          {% for link in pages['404'].page.suggestions.links %}
          <a href="{{ link.url }}" class="text-primary-600 dark:text-primary-400 hover:underline">{{ link.label }}</a>
          {% endfor %}
        </div>
      </div>
      {% endif %}
    </div>
  </div>
</section>
